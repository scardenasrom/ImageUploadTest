<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    style="@android:style/TextAppearance.StatusBar.EventContent"
    >

    <ImageView
        android:id="@+id/view_notification_progress_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/notif_circle"
        android:layout_centerVertical="true"
        android:layout_margin="12dp"
        android:padding="8dp"
        android:src="@drawable/ic_complete"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/view_notification_progress_icon"
        >

        <TextView
            android:id="@+id/view_notification_progress_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subiendo Álbum"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            fontPath="fonts/CronosProRegular.otf"
            />

        <ProgressBar
            android:id="@+id/view_notification_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:indeterminate="false"
            android:layout_marginRight="@dimen/spacing_small"
            android:visibility="invisible"
            style="?android:attr/progressBarStyleHorizontal"
            />

        <TextView
            android:id="@+id/view_notification_progress_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="@dimen/spacing_small"
            android:text="Subiendo fotografías 3/13"
            android:textColor="@color/white"
            android:textSize="12sp"
            fontPath="fonts/CronosProRegular.otf"
            />

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_progress_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:layout_above="@+id/page_creation_button_layout"
    android:padding="@dimen/spacing_small"
    >

    <TextView
        android:id="@+id/view_progress_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_xsmall"
        android:text="Progreso subida"
        android:textColor="@color/white"
        fontPath="fonts/CronosProRegular.otf"
        />

    <ProgressBar
        android:id="@+id/view_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:layout_below="@+id/view_progress_label"
        android:layout_toLeftOf="@+id/view_progress_check"
        style="?android:attr/progressBarStyleHorizontal"
        />

    <ImageView
        android:id="@+id/view_progress_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_small"
        android:src="@drawable/ic_check_circle"
        android:visibility="gone"
        />

</RelativeLayout>